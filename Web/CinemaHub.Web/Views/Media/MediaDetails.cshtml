                                                <a class="signoutbtn" style="margin-left: 15px" asp-controller="Media" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                                </div>
                                                }
                                                <div class="sb-it">
                                                <h6>Genres:</h6>
                                                <p>
                                                    @foreach (var genre in Model.GenresList)
