@model CinemaHub.Web.ViewModels.Recommendations.RecommendationResponseViewModel;
@section Styles {
    <style>
        .sliderv2 {
            background: url(images/template/uploads/slider-bg2.jpg) no-repeat;
        }

    </style>
}
@section Hero {
    <div class="slider sliderv2">
        <div class="container" style="margin-top: 50px;">
            <h1 style="font-family: 'Dosis', sans-serif;font-size: 35px; padding-bottom: 15px; color: whitesmoke">Recommended for you:</h1>
            <div class="row">
                <div class="slider-single-item">
                    @foreach (var recommendation in Model.Recommendations)
                    {
                        <div class="movie-item">
                            <div class="row">
                                <div class="col-md-8 col-sm-12 col-xs-12">
                                    <div class="title-in">
                                        <div class="cate">
                                            @foreach (var genre in recommendation.Genres)
                                            {
                                                <span class="blue"><a href="#">@genre</a></span>
                                            }

                                        </div>
                                        <h1>
                                            <a asp-controller="Media" asp-action="@($"{@recommendation.MediaType}s")" asp-route-id="@recommendation.Id">
                                                @recommendation.Title <span>@recommendation.ReleaseDate.Year</span>
                                            </a>
                                        </h1>
                                        <div class="social-btn">
                                            <a href="#" class="parent-btn"><i class="ion-play"></i> Watch Trailer</a>
                                            <a href="#" class="parent-btn"><i class="ion-heart"></i> Add to Watchlist</a>
                                            <div class="hover-bnt">
                                                <a href="#" class="parent-btn"><i class="ion-android-share-alt"></i>share</a>
                                                <div class="hvr-item">
                                                    <a href="#" class="hvr-grow"><i class="ion-social-facebook"></i></a>
                                                    <a href="#" class="hvr-grow"><i class="ion-social-twitter"></i></a>
                                                    <a href="#" class="hvr-grow"><i class="ion-social-googleplus"></i></a>
                                                    <a href="#" class="hvr-grow"><i class="ion-social-youtube"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mv-details"> 
                                            <p><i class="ion-android-star"></i><span>@recommendation.AverageRating</span> /10</p>
                                            <ul class="mv-infor">
                                                <li><p style="font-size: 15px;">Release: @recommendation.ReleaseDate.ToString("D")</p></li>
                                            </ul>
                                        </div>
                                        <div class="btn-transform transform-vertical">
                                            <div><a asp-controller="Media" asp-action="@($"{@recommendation.MediaType}s")" asp-route-id="@recommendation.Id" class="item item-1 redbtn">more detail</a></div>
                                            <div><a asp-controller="Media" asp-action="@($"{@recommendation.MediaType}s")" asp-route-id="@recommendation.Id" class="item item-2 redbtn hvrbtn">more detail</a></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-12 col-xs-12">
                                    <div class="mv-img-2">
                                        <a href="#"><img src="@recommendation.PosterPath" alt=""></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

